#mediaPopup.popup
  .popupBody
    #movieModal(style='display: none')
    .modalContent
      span.closeBtn &times;
      .popupContent
        img#mediaImage.mediaImage(src='')
        .mediaInformation
          .mediaHeader
            button.bookmarkButton
              img(src='/img/bookmark.png', alt='Bookmark')
            h2#mediaTitle
          p#mediaDescription
          .mediaSpecificInfo
            p#mediaGenre
            p#mediaRanking
            p#mediaDirector
            p#mediaReleased