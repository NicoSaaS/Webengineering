doctype html
html(lang="de")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title CineCanvas
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
  body
    header
      .header-container
        h1.nav_left CineCanvas
        nav
          a(href="/" class=active_tab === 'home' ? 'active' : '') Home
          a(href="/movies" class=active_tab === 'movies' ? 'active' : '') Movies
          a(href="/watchlist" class=active_tab === 'watchlist' ? 'active' : '') Watchlist
          block searchField
          a.profile-icon(href="/profile")
            i.fas.fa-user
    

    block content

