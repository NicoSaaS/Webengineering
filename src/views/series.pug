extends layout.pug

block content
  div.body_container.marginLeft
    each group in groupedSerie 
        h4.whiteFontColor.marginTop= group.letter
        ul.media_list
          each serie in group.series 
            li(data-serie=JSON.stringify(serie))
              img.media_cover(src=serie.image, alt=serie.title, onclick="showSerieDetails(event)")

  include modal.pug


  script(src="/js/serie.js")