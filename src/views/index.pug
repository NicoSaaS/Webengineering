block content
    div.body_container
        h3.whiteFontColor Movie Ranking of the Month 
            br
            ul.media_list
                each movie in movies
                    li
                        h4= movie.ranking + ". "
                        img.media_cover(
                            src=movie.image, 
                            alt=movie.title, 
                            data-movie=JSON.stringify(movie),
                            onclick="showMovieDetails(event)"
                        )

        h3.whiteFontColor Series Ranking of the Month
            br
            ul.media_list
                each serie in series
                    li
                        h4= serie.ranking + ". "
                        img.media_cover(
                            src=serie.image, 
                            alt=serie.title, 
                            data-serie=JSON.stringify(serie),
                            onclick="showSerieDetails(event)"
                        )

    div.popup(id="mediaPopup")
        div.popup-body
            span.close-btn &times;
            .popup-content
                img.media_image(id="media-image", src="")
                .media-information
                    .media-general-info
                        h2(id="media-title")
                        p(id="media-description")
                        .media-specific-info
                            p(id="media-genre")
                            p(id="media-ranking")
                            a(id="media-trailer" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank") Schau dir hier den Trailer an!


    script(src="/js/movie.js")
    script(src="/js/serie.js")
    script(src="/js/header.js")
