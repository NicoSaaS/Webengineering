extends layout.pug
block searchField
    form.searchField_placement(action="/search", method="get")
        input(type="text", name="query", placeholder="Search movies or series")
        button(type="submit") Search

block content
    div.body_container
        h3 Movie Ranking of the Month 
            br
            ul.media_list
                each movie in movies
                    li
                        h4= movie.ranking + ". "
                        img.media_cover(
                            src=movie.image, 
                            alt=movie.title, 
                            data-movie=JSON.stringify(movie),
                            onclick="showMovieDetails(event)"
                        )
        h3 Series Ranking of the Month
            br
            ul.media_list
                each serie in series
                    li
                        h4= serie.ranking + ". "
                        img.media_cover(src=serie.image, alt=serie.title)
    div(id="movieModal", style="display: none;")
        div.modal-content
            span.close-btn &times;
            .modal-body
                img.media_modal(id="movie-image", src="")
                .movie-details
                    h2(id="movie-title")
                    p(id="movie-description")
                    p(id="movie-genre")
                    p(id="movie-ranking")

    script(src="/js/movie.js")