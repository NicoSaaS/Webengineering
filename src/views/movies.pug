extends layout.pug

block content
  .bodyContainer.marginLeftLarge
    each group in groupedMovies
      h4.whiteFontColor.marginTop= group.letter
      ul.mediaList
        each movie in group.movies
          li.movieItem(data-movie=JSON.stringify(movie))
            img.mediaCover(
              src=movie.image,
              alt=movie.title
            )

  include modal.pug

  script(src='/js/media.js')
